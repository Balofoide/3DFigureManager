                            height: 600px;
                            width: 30%;
                            cor: Theme.surface;
                            Detalhes_Material :=  VerticalBox {
                                visible: !selectec_estoque.id.is-empty;
                                HorizontalLayout {
                                    Text {
                                        vertical-alignment: center;
                                        text: "Detalhes de Material";
                                        color: black;
                                        font-size: Theme.fontSizeTitle;
                                        font-weight: 700;
                                    }

                                    HorizontalLayout {
                                        // visible: !selectec_estoque.id.is-empty;
                                        spacing: 10px;
