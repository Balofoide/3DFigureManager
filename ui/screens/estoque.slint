                                        vertical-alignment: center;
                                           text: selectec_estoque.quantidade+"/"+selectec_estoque.quantidade-total+selectec_estoque.medida; color: Theme.onSurface;
                                           font-size: 20px;
                                           font-weight: 500;
                                       }
                                    }
                                    
                               
                               }


                                    VerticalBox {
                                        alignment: end;
                                        Container {
                                            cor: Theme.surface;
                                            HorizontalBox {
                                                Text { color: Theme.onSurface; text: "Custo Total:"; font-size: 20px; font-weight: 700;}
                                                Text {
                                                    color: Theme.onSurface; 
                                                    text:preco_total_estoque+"R$";
                                                    font-size: 20px;
                                                    font-weight: 700;
                                                
                                                }
                                                
                                            }
                                        }
                                        

                                    }
                                    
                                    
                                    
                                }
                            }
                        }

                        HorizontalBox {
                            spacing: Theme.spacing;
                        }
                    }
                }
            }
        }
}

    novo_material := VerticalBox {
        visible: false;
      
        HorizontalBox {
            alignment: center;
            GridBox {
                width: 100%;
               
               

                Row { 
                    HorizontalBox {
                    alignment: center;
                    VerticalLayout {
                        alignment: center;
                        HorizontalBox {
                            alignment: center;
                            Text {
                                text: "Novo Material";
                                color: Theme.onSurface;
                                font-weight: 800;
                                font-size: 40px;
                            }
                        }
                        
                        Container {
                       
                           
                            VerticalBox {
                                InputField {
                                    max_lenght: 47;
