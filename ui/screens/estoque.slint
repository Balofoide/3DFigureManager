                            // width: 500px;
                            // height: 500px;
                            Container {
                                width: 100%;
                                height: 100%;
                                shadow_blur: 10px;
                                border_width: 1px;
                                border_radius: 10px;
                                VerticalBox {
                                    HorizontalBox {
                                        Text {
                                            vertical-alignment: center;
                                            text: "Editar Material";
                                            color: Theme.onSurface;
                                            font-weight: 800;
                                            font-size: 20px;
                                        }

                                        BaloButton {
                                            width: 80px;
                                            height: 40px;
                                            texto: "Confirmar";
                                            clicked => {
                                                
                                                atualizar_estoque();
                                                Edit_Estoque_Screen.close();
                                                temp_estoque_material = "";
                                                temp_estoque_quantidade = "";
                                                temp_estoque_quantidade_total = "";
                                                temp_estoque_preco = "";
                                                temp_estoque_medida = "";
 
