                                }
                    
                                VerticalBox {
                                    Text {
                                        text: "Medida";
                                        color: Theme.onSurface;
                                    }
                    
                                    CustomComboBox {
                                        model: ["g", "mm", "un", "ml"];
                                        text-color: Theme.onSurface;
                                        selected(current-value) => {
                                            estoque_medida = current-value;
                                            debug(estoque_medida)
                                        }
                                    }
                                }
                    
                                InputField {
                                    max_lenght: 5;
