  
export global Theme {
    // Palette colors
    in property <brush> text-color: #000000;
    in property <color> background: #ffffff;
    in property <color> surface: #7c7c7c;
    in property <color> primary: #6200EE;
    in property <color> onPrimary: #FFFFFF;
    in property <color> secondary: #03DAC6;
    in property <color> onSecondary: #000000;
    in property <color> error: #B00020;
    in property <color> onError: #FFFFFF;
    in property <color> onBackground: #000000;
    in property <color> onSurface: #000000;

    // Typography and spacing
    in property <length> fontSizeSmall: 12px;
    in property <length> fontSizeBody: 14px;
    in property <length> fontSizeTitle: 18px;
    in property <length> borderRadius: 10px;
    in property <length> buttonHeight: 36px;
    in property <length> inputHeight: 15px;
    in property <length> spacing: 12px;
}