 

export global Theme {
    // Cores Principais (baseadas na paleta)
    in property <color> primary: #401F71;        /* Roxo escuro vibrante */
    in property <color> primaryLight: #824D74;   /* Roxo médio suavizado */
    in property <color> primaryDark: #2A1349;     /* Tom mais escuro derivado da primary */

    // Cores de Apoio (tons terciários da paleta)
    in property <color> secondary: #BE7B72;       /* Salmão rosado */
    in property <color> secondaryLight: #FDAF7B;  /* Salmão claro energético */

    // Cores de Texto e Superfície
    in property <color> onPrimary: #FFFFFF;       /* Texto branco puro */
    in property <color> onSecondary: #2A2A2A;     /* Texto escuro suave */
    in property <color> background: #FDF5F0;      /* Fundo bege-claro (tom pastel do FDAF7B) */
    in property <color> surface: #F0E4E1;         /* Superfície rosada neutra */
    in property <color> onBackground: #401F71;    /* Texto usando a cor primary */
    in property <color> onSurface: #4A2B5C; 
    in property <color> onSurfaceInput: #4a2b5c57;      /* Texto roxo-escuro suavizado */

    // Cores de Estado (mantidas para contraste)
    in property <color> error: #D32F2F;
    in property <color> onError: #FFFFFF;

    // Tipografia e Espaçamento (mantidos)
    in property <length> fontSizeSmall: 12px;
    in property <length> fontSizeBody: 14px;
    in property <length> fontSizeTitle: 18px;
    in property <length> borderRadius: 10px;
    in property <length> buttonHeight: 36px;
    in property <length> inputHeight: 15px;
    in property <length> spacing: 12px;
}


